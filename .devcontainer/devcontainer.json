{
  "name": "USBRetro Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": { 
      "DEBIAN_FRONTEND": "noninteractive"
    }
  },
  "settings": { 
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cmake-tools",
    "ms-vscode.cpptools"
  ],
  "forwardPorts": [],
  "postCreateCommand": "echo 'Container for USBRetro development is ready!'",
  "remoteUser": "root",
  "workspaceFolder": "/root/workspace/USBRetro"
}
